<div class="mx-auto" style="width: 30rem; margin: 5em 0 ;">
  <div class="card" style="width: 30rem;">
    <div class="card-body">
      <div class='border-bottom'>
        <h5 class="card-title">Profile</h5>
      </div>
      <p class="card-text">
        名前：　　　　　<%= user.name %><br>
        メールアドレス：<%= user.email %><br>
        自己紹介<br>
        <%= user.description %>
      </p>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">犬１の情報</li>
      <li class="list-group-item">犬２の情報</li>
      <li class="list-group-item">犬３の情報</li>
    </ul>
    <% if current_user %>
      <div class="card-body">
        <%= link_to '人間の編集', edit_user_path(user.id), class: "btn btn-primary" %>
        <%= link_to '犬の編集', edit_user_path(user.id), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
