<div class="mx-auto" style="width: 30rem; margin: 3em 0 ;">
  <% if current_user&.admin %>
    <%= link_to '新規作成', new_item_path %>
  <% end %>
  <div class="card" style="width: 30rem; margin: 1em 0 ;">
    <div class="card-body">
      <div class='border-bottom'>
        <h5 class="card-title"><%= @item.name %></h5>
      </div>
      <p class="card-text">
        <p>
          原産国：　　<%= @item.country_of_origin %><br>
          対応年齢：　<%= @item.target_age %><br>
          内容量：　　<%= @item.grams %><br>
          価格：　　　<%= @item.price %><br>
          カテゴリー：<%= @item.category %><br>
          <% if current_user&.admin %>
            <%= link_to '削除', item_path(@item.id), method: :delete %>
            <%= link_to '編集', edit_item_path(@item.id) %>
          <% end %>
        </p>
      </p>
    </div>
    <%= link_to 'レビューを書く', new_review_path(item_id: @item.id), class: "btn btn-primary" %>
  </div>
  <% @reviews.each do |f| %>
    <div class="card" style="width: 30rem; margin: 1em 0 ;">
      <div class="card-body">
        <div class='border-bottom'>
          <h5 class="card-title"><%= f.title %></h5>
        </div>
        <p class="card-text">
          <p>
            <%= f.body %><br>
            <p class='border-bottom'>
               <% @dogs&.each do |dog| %>
               <%= dog.breeds %>
               <%= "#{(Date.today.strftime("%Y%m%d").to_i - dog.birthday.strftime("%Y%m%d").to_i) / 10000} 才"%>
               <% end %>
            </p>
            <% if current_user&.admin %>
              <%= link_to '削除', item_path(f.id), method: :delete %>
              <%= link_to '編集', edit_item_path(f.id) %>
            <% end %>
          </p>
        </p>
      </div>
    </div>
  <% end %>
</div>
      </p>
    </div>
  </div>
</div>
